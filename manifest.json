{
	"name": "Injector Demo",
	"version": "0.0.1",
	"manifest_version": 2,
	"description": "Minimum viable chrome extension for different injection styles",
	"browser_action": {
		"default_icon": "icon.png"
	},
	"background": {
		"scripts": ["injector.js"],
		"persistent": true
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js" : ["required.js","content_script.js"]
		}
	],
	"permissions": [
		"http://*/*", 
		"https://*/*"
	]
}